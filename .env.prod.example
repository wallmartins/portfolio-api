# Production Environment Configuration
# Copy this file to .env in production and update with your values

# Application
APP_NAME=portfolio-api
APP_ENV=prod

# JWT Configuration
# CRITICAL: Generate a secure key for production!
# Generate with: php -r "echo base64_encode(random_bytes(32));"
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY

# Admin Configuration
# Your GitHub user ID (get from: https://api.github.com/users/your-username)
ADMIN_ID=

# PostgreSQL Database Configuration
DB_DRIVER=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=portfolio
DB_USERNAME=portfolio
DB_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
DB_CHARSET=utf8
DB_COLLATION=utf8_unicode_ci
DB_PREFIX=

# Redis Configuration
REDIS_HOST=redis
REDIS_AUTH=(null)
REDIS_PORT=6379
REDIS_DB=0

# GitHub OAuth Configuration
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=https://your-domain.com/auth/github/callback

# Optional: Run seeders on initialization (default: false)
RUN_SEEDERS=false
