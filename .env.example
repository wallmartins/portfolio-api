# Application
APP_NAME=portfolio-api
APP_ENV=dev

# JWT Configuration
# IMPORTANTE: Altere esta chave em produção!
# Generate with: php -r "echo base64_encode(random_bytes(32));"
JWT_SECRET_KEY=your-secret-key-here-change-in-production

# Admin Configuration
# GitHub ID do usuário administrador
# Obtenha em: https://api.github.com/users/seu-username
ADMIN_ID=your-github-id-here

# Database Configuration
# Development: sqlite | Production: pgsql
DB_DRIVER=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=runtime/database.sqlite
DB_USERNAME=portfolio
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# Production PostgreSQL (quando DB_DRIVER=pgsql)
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=portfolio
# DB_USERNAME=portfolio
# DB_PASSWORD=your-secure-password-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_AUTH=(null)
REDIS_PORT=6379
REDIS_DB=0

# GitHub OAuth (optional for authentication)
# Create app at: https://github.com/settings/developers
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_REDIRECT_URI=http://localhost:9501/auth/github/callback